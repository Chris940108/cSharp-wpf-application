<Window x:Class="Week9Disconnected.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week9Disconnected"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid  Margin="28,34,372,34" Name="grdProducts"/>
        <Button x:Name="btnLoadAllProducts" Content="Load All Products" Width="134" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Click="btnLoadAllProducts_Click" Margin="454,48,0,0"/>
        <Button x:Name="btnClearData" Content="Clear Data" Width="136" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Click="btnClearData_Click" Margin="628,48,0,0"/>


        <Label x:Name="lb1" Content="ID:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.533,-0.589" Margin="470,120,0,0"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="547,124,0,0" VerticalAlignment="Top" Width="50"/>

        <Button x:Name="btnFind" Content="Find" Width="120" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Click="btnFind_Click" Margin="636,119,0,0"/>


        <Label x:Name="lb2" Content="Name: " HorizontalAlignment="Left" Margin="470,151,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="547,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>

        <Label x:Name="lb3" Content="Price: " HorizontalAlignment="Left" Margin="470,178,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Margin="547,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>

        <Label x:Name="lb4" Content="Quantity: " HorizontalAlignment="Left" Margin="470,217,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtQuantity" HorizontalAlignment="Left" Margin="547,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>

        <Button x:Name="btnInsert" Content="Insert" Width="78" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Click="btnInsert_Click" Margin="453,265,0,0"/>
        <Button x:Name="btnUpdate" Content="Update" Width="78" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Click="btnUpdate_Click" Margin="560,265,0,0"/>
        <Button x:Name="btnDelete" Content="Delete" Width="78" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Click="btnDelete_Click" Margin="665,265,0,0"/>
        <Button x:Name="btnShowWindow2" Content="Show Window 2" Width="195" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Click="btnShowWindow2_Click" Margin="501,332,0,0"/>

    </Grid>
</Window>
